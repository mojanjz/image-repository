<style>
  table, th, td {
    padding: 10px;
  }
</style>

<p id="notice"><%= notice %></p>

<h1>Posts</h1>
<div class="container">
<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Body</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <tr class="add-padding">
        <td><%= post.title %></td>
        <td><%= post.body %></td>
        <td><%= image_tag(post.photo, width: 300) if post.photo.attached? %></td>
        <td><%= link_to 'Show', post %></td>
        <td><%= link_to 'Edit', edit_post_path(post) %></td>
        <td><%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<div class="container">

<br>

<%= link_to 'New Post', new_post_path %>
