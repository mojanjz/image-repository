<style>
  table, th, td {
    padding: 10px;
  }
</style>

<h1>Posts</h1>
<div class="container">
<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Body</th>
      <th>User</th>
      <th colspan="4"></th>
    </tr>
  </thead>

  <tbody>
    <% @current_user.posts.each do |post| %>
      <tr class="add-padding">
        <td><%= post.title %></td>
        <td><%= post.body %></td>
        <td><%= post.user.email %></td>
        <td><%= image_tag(post.photo, width: 300) if post.photo.attached? %></td>
        <td><%= link_to 'Show', post %></td>
        <% if current_user?(post.user) %>
          <td><%= link_to "Edit", edit_post_path(post) %></td>
          <td><%= link_to "Delete", post, method: :delete, data: { confirm: "Do you want to delete this post ?"}%></td>
          <% end %>
      </tr>
    <% end %>
  </tbody>
</table>
<div class="container">

<br>

<%= link_to 'New Post', new_post_path %>